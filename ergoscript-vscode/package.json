{
  "name": "ergoscript-vscode",
  "displayName": "ErgoScript Language Support",
  "description": "Language support for ErgoScript - Ergo blockchain smart contract language",
  "version": "0.1.0",
  "publisher": "ergo-community",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:ergoscript"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "ergoscript",
      "aliases": ["ErgoScript", "ergoscript"],
      "extensions": [".ergo", ".es"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "ergoscript",
      "scopeName": "source.ergoscript",
      "path": "./syntaxes/ergoscript.tmLanguage.json"
    }],
    "configuration": {
      "type": "object",
      "title": "ErgoScript",
      "properties": {
        "ergoscript.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  }
}

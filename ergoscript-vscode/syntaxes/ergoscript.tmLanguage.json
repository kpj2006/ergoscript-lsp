{
  "name": "ErgoScript",
  "scopeName": "source.ergoscript",
  "fileTypes": ["ergo", "es"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ergoscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ergoscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ergoscript",
          "match": "\\b(if|else|return)\\b"
        },
        {
          "name": "keyword.other.ergoscript",
          "match": "\\b(val|def|case|match)\\b"
        },
        {
          "name": "storage.type.ergoscript",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ergoscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ergoscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ergoscript",
          "match": "\\b([0-9]+|0x[0-9a-fA-F]+)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.ergoscript",
          "match": "\\b(Int|Long|BigInt|UnsignedBigInt|Boolean|Byte|Short|Box|SigmaProp|GroupElement|AvlTree|Coll|Option|Context|Header|PreHeader|Global)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ergoscript",
          "match": "\\b(sigmaProp|proveDlog|proveDHTuple|blake2b256|sha256|byteArrayToBigInt|longToByteArray|deserialize|serialize|getVar|decodePoint|allOf|anyOf|atLeast|min|max|fold|exists|forall|map|filter|slice|indexOf)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.ergoscript",
          "match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%|&&|\\|\\||!|&|\\||\\^|<<|>>|>>>|\\+\\+)"
        },
        {
          "name": "keyword.operator.assignment.ergoscript",
          "match": "(=>|=)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.ergoscript",
          "match": "\\b(SELF|HEIGHT|INPUTS|OUTPUTS|CONTEXT|Global|MinerPubkey|LastBlockUtxoRootHash)\\b"
        }
      ]
    }
  }
}
